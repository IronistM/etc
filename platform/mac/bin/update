#!/usr/bin/env bash

# Used by update-emacs
read -r -d '' UPDATE_EMACS_COMMAND <<- EOF
(progn
 (require 'package)
 (setq
  package-archives
  '(
    ("melpa" . "https://melpa.org/packages/")
    ("org"   . "http://orgmode.org/elpa/")
    ("gnu"   . "https://elpa.gnu.org/packages/")))
 (package-initialize)
 (package-refresh-contents)
 (package-list-packages t)
 (package-menu-mark-upgrades)
 (package-menu-execute t))
EOF

section () {
    echo -e "\033[1;94m==>\033[0m \033[1;97mUpdating $1...\033[0m"
}

update-homebrew () {
    section homebrew
    brew update && brew upgrade && brew cleanup
}

update-spacemacs () {
    section Spacemacs
    cd ~/.emacs.d && git fetch && git reset --hard origin/master
}

update-emacs () {
    section Emacs

    emacs --batch --eval="${UPDATE_EMACS_COMMAND}"
}

if [ "$#" -eq 0 ]; then
    update-homebrew
    update-spacemacs
    update-emacs
fi

while [ "$#" -gt 0 ]; do
    case "$1" in
	--emacs     ) update-emacs ;;
	--spacemacs ) update-spacemacs ;;
	--homebrew  ) update-homebrew ;;
	*           ) echo "Unrecognized argument '$1'" ;;
    esac
    shift
done

